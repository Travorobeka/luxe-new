{% doc %}
  @prompt
    large horizontal text field with image

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-image-block-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.content_gap }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-text-image-block__content-{{ ai_gen_id }} {
    flex: 1;
    {% if block.settings.layout == 'image_right' %}
      order: 1;
    {% else %}
      order: 2;
    {% endif %}
  }

  .ai-text-image-block__image-container-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    {% if block.settings.layout == 'image_right' %}
      order: 2;
    {% else %}
      order: 1;
    {% endif %}position: relative;
  }

  .ai-text-image-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-text-image-block__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-text-image-block__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-text-image-block__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-text-image-block__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
  }

  .ai-text-image-block__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-text-image-block__text-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
  }

  .ai-text-image-block__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-image-block-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-text-image-block__content-{{ ai_gen_id }},
    .ai-text-image-block__image-container-{{ ai_gen_id }} {
      order: unset;
      flex: none;
    }

    .ai-text-image-block__image-container-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-text-image-block__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-text-image-block__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-text-image-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-image-block__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-text-image-block__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-text-image-block__text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>

  <div class="ai-text-image-block__image-container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 800 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-text-image-block__image-{{ ai_gen_id }}"loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}">
    {% else %}
      <div class="ai-text-image-block__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-text-image-block__empty-state-{{ ai_gen_id }}">
          Add an image
        </div>
      </div>
    {% endif %}
  </div>
</div>

