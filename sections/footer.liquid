{% comment %}
  Enhanced Footer Section
  A comprehensive footer with newsletter, social media, menus, and extensive customization
{% endcomment %}

{{ 'footer.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign footer_id = section.id | replace: '_', '' | downcase
  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
  endif
-%}

{% style %}
  .footer-{{ footer_id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.5;
  }

  .footer-container-{{ footer_id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-grid-{{ footer_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: {{ section.settings.column_spacing }}px;
    margin-bottom: {{ section.settings.section_spacing }}px;
    {% if section.settings.column_alignment != 'default' %}
      align-items: {{ section.settings.column_alignment }};
    {% endif %}
    {% if section.settings.column_distribution != 'equal' %}
      {% case section.settings.column_distribution %}
        {% when 'wide_first' %}
          grid-template-columns: 2fr repeat({{ section.settings.columns | minus: 1 }}, 1fr);
        {% when 'wide_last' %}
          grid-template-columns: repeat({{ section.settings.columns | minus: 1 }}, 1fr) 2fr;
        {% when 'wide_center' %}
          {% if section.settings.columns == '3' %}
            grid-template-columns: 1fr 2fr 1fr;
          {% endif %}
        {% when 'custom' %}
          grid-template-columns: {{ section.settings.custom_column_widths }};
      {% endcase %}
    {% endif %}
    {% if section.settings.column_justify != 'default' %}
      justify-content: {{ section.settings.column_justify }};
    {% endif %}
    {% if section.settings.enable_column_borders %}
      {% for i in (1..section.settings.columns) %}
        {% unless forloop.last %}
          .footer-column-{{ footer_id }}:nth-child({{ i }}) {
            border-right: {{ section.settings.column_border_width }}px {{ section.settings.column_border_style }} {{ section.settings.column_border_color }};
            padding-right: {{ section.settings.column_border_spacing }}px;
          }
          .footer-column-{{ footer_id }}:nth-child({{ i | plus: 1 }}) {
            padding-left: {{ section.settings.column_border_spacing }}px;
          }
        {% endunless %}
      {% endfor %}
    {% endif %}
  }

  .footer-column-{{ footer_id }} {
    display: flex;
    flex-direction: column;
    {% if section.settings.column_content_alignment != 'default' %}
      align-items: {{ section.settings.column_content_alignment }};
    {% endif %}
    {% if section.settings.column_text_alignment != 'default' %}
      text-align: {{ section.settings.column_text_alignment }};
    {% endif %}
    {% if section.settings.column_min_height > 0 %}
      min-height: {{ section.settings.column_min_height }}px;
    {% endif %}
    {% if section.settings.column_max_width > 0 %}
      max-width: {{ section.settings.column_max_width }}px;
    {% endif %}
  }

  .footer-title-{{ footer_id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 500;
    margin-top: 0;
    margin-bottom: 20px;
    color: {{ section.settings.heading_color }};
  }

  .footer-nav-{{ footer_id }} {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 0;
    padding: 0;
    list-style: none;
    opacity: 1;
    max-height: 1000px;
    transition: none;
  }

  .footer-nav-{{ footer_id }}.fade {
    transition: opacity 0.3s;
    opacity: 0;
    max-height: 0;
    pointer-events: none;
  }

  .footer-nav-{{ footer_id }}.fade.active {
    opacity: 1;
    max-height: 1000px;
    pointer-events: auto;
  }

  .footer-nav-{{ footer_id }}.slide {
    transition: max-height 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.3s;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .footer-nav-{{ footer_id }}.slide.active {
    max-height: 1000px;
    opacity: 1;
    pointer-events: auto;
  }

  .footer-nav-item-{{ footer_id }} a {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    transition: color 0.2s ease;
  }

  .footer-nav-item-{{ footer_id }} a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .footer-company-info-{{ footer_id }} {
    margin-bottom: 20px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: 16px;
  }

  .footer-company-title-{{ footer_id }} {
    text-transform: {{ section.settings.company_title_transform }};
    font-weight: {{ section.settings.company_title_weight }};
    font-size: {{ section.settings.company_title_size }}px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: 8px 16px;
    display: inline-block;
  }

  .footer-company-logo-{{ footer_id }} {
    text-align: {{ section.settings.company_logo_align }};
    margin: {{ section.settings.company_logo_margin }}px 0;
    padding: 16px;
  }

  .footer-company-logo-{{ footer_id }} img {
    max-width: {{ section.settings.company_logo_size }}px;
    height: auto;
    border-radius: {{ section.settings.company_logo_border_radius }}px;
    display: inline-block;
  }

  .footer-social-{{ footer_id }} {
    margin-top: 20px;
  }

  .footer-social-{{ footer_id }} .social-media-links {
    display: flex;
    align-items: center;
  }

  .footer-social-{{ footer_id }} .social-media-links--item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.social_icon_size }}px;
    height: {{ section.settings.social_icon_size }}px;
    border-radius: {{ section.settings.social_icon_border_radius }}px;
    background-color: {{ section.settings.social_bg_color }};
    color: {{ section.settings.social_icon_color }};
    transition: all {{ section.settings.social_hover_transition }}s ease;
    text-decoration: none;
  }

  .footer-social-{{ footer_id }} .social-media-links--item:hover {
    background-color: {{ section.settings.social_hover_bg_color }};
    color: {{ section.settings.social_hover_icon_color }};
    {% if section.settings.social_hover_scale > 1 %}
      transform: scale({{ section.settings.social_hover_scale }});
    {% endif %}
    {% if section.settings.social_hover_rotate != 0 %}
      transform: rotate({{ section.settings.social_hover_rotate }}deg);
    {% endif %}
  }

  .footer-menu-title-{{ footer_id }} {
    text-transform: {{ section.settings.menu_title_transform }};
    font-weight: {{ section.settings.menu_title_weight }};
    font-size: {{ section.settings.menu_title_size }}px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: {{ section.settings.menu_padding_y }}px {{ section.settings.menu_padding_x }}px;
    display: inline-block;
  }

  .footer-menu-wrapper-{{ footer_id }} {
    margin: {{ section.settings.menu_margin_y }}px {{ section.settings.menu_margin_x }}px;
    min-width: {% if section.settings.menu_min_width > 0 %}{{ section.settings.menu_min_width }}px{% else %}initial{% endif %};
    max-width: {% if section.settings.menu_max_width > 0 %}{{ section.settings.menu_max_width }}px{% else %}initial{% endif %};
  }

  .footer-social-{{ footer_id }} .social-media-links--item svg {
    width: {{ section.settings.social_icon_inner_size }}px;
    height: {{ section.settings.social_icon_inner_size }}px;
  }

  .footer-bottom-{{ footer_id }} {
    display: flex;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid {{ section.settings.border_color }};
    justify-content: {{ section.settings.footer_bottom_alignment }};
  }

  .footer-bottom-{{ footer_id }}.footer-bottom-left-right {
    justify-content: space-between;
  }

  .footer-bottom-group-{{ footer_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 100%;
  }

  .footer-bottom-group-{{ footer_id }}.footer-bottom-group-left-right {
    justify-content: space-between;
  }

  .footer-copyright-{{ footer_id }} {
    font-size: {{ section.settings.copyright_size }}px;
    text-align: left;
  }

  .footer-payment-{{ footer_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-end;
  }

  .footer-newsletter-{{ footer_id }} {
    margin-bottom: 30px;
    text-align: {{ section.settings.newsletter_align }};
    {% if section.settings.newsletter_bg_image != blank %}
      background-image: url('{{ section.settings.newsletter_bg_image | img_url: 'master' }}');
      background-size: cover;
      background-position: center;
    {% endif %}
    padding: {{ section.settings.newsletter_section_padding }}px;
    margin-bottom: {{ section.settings.newsletter_section_margin }}px;
  }

  .footer-newsletter-title-{{ footer_id }} {
    text-transform: {{ section.settings.newsletter_title_transform }};
    font-weight: {{ section.settings.newsletter_title_weight }};
    font-size: {{ section.settings.newsletter_title_size }}px;
    background: {{ section.settings.menu_bg_color }};
    border-radius: {{ section.settings.menu_border_radius }}px;
    padding: 8px 20px 8px 0;
    display: inline-block;
  }

  .footer-newsletter-form-{{ footer_id }} {
    display: flex;
    flex-direction: {{ section.settings.newsletter_layout }};
    gap: 10px;
    margin-top: 15px;
  }

  .footer-newsletter-input-group-wrapper-{{ footer_id }} {
    display: flex;
    width: 100%;
  }

  .footer-newsletter-input-group-wrapper-{{ footer_id }} .footer-newsletter-input-{{ footer_id }} {
    border-top-right-radius: 0 !important;
    border-bottom-right-radius: 0 !important;
    flex: 1;
  }

  .footer-newsletter-input-group-wrapper-{{ footer_id }} .footer-newsletter-button-{{ footer_id }} {
    border-top-left-radius: 0 !important;
    border-bottom-left-radius: 0 !important;
    margin-left: -1px;
    min-width: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 16px;
  }

  .footer-newsletter-input-{{ footer_id }} {
    flex: 1;
    min-width: 0;
    padding: 12px 15px;
    border: 1px solid {{ section.settings.newsletter_input_border }};
    border-radius: {{ section.settings.newsletter_border_radius }}px;
    background-color: {{ section.settings.newsletter_input_bg }};
    color: {{ section.settings.newsletter_input_color }};
  }

  .footer-newsletter-input-{{ footer_id }}::placeholder {
    color: {{ section.settings.newsletter_input_color }};
    opacity: 0.7;
  }

  .footer-newsletter-button-{{ footer_id }} {
    padding: 12px 20px;
    border: none;
    border-radius: {{ section.settings.newsletter_border_radius }}px;
    background-color: {{ section.settings.newsletter_button_bg }};
    color: {{ section.settings.newsletter_button_color }};
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }

  .footer-newsletter-button-{{ footer_id }}:hover {
    background-color: {{ section.settings.newsletter_button_hover_bg }};
  }

  .footer-newsletter-error-{{ footer_id }} {
    color: #d82c0d;
    font-size: 13px;
    margin-bottom: 10px;
  }

  .footer-newsletter-success-{{ footer_id }} {
    color: #008060;
    font-size: 13px;
    margin-bottom: 10px;
  }

  .footer-menu-toggle-{{ footer_id }} {
    display: none;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    position: absolute;
    right: 0;
    top: 0;
    width: 24px;
    height: 24px;
    color: {{ section.settings.heading_color }};
  }

  .footer-menu-wrapper-{{ footer_id }} {
    position: relative;
  }

  .footer-menu-heading-{{ footer_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  @media screen and (max-width: 767px) {
    .footer-grid-{{ footer_id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.mobile_column_gap | default: 20 }}px;
    }

    .footer-column-{{ footer_id }} {
      margin-bottom: 20px;
      {% if section.settings.mobile_column_alignment != 'default' %}
        text-align: {{ section.settings.mobile_column_alignment }};
      {% endif %}
      {% if section.settings.enable_column_borders %}
        border-right: none !important;
        padding-right: 0 !important;
        padding-left: 0 !important;
        {% if section.settings.mobile_column_borders %}
          border-bottom: {{ section.settings.column_border_width }}px {{ section.settings.column_border_style }} {{ section.settings.column_border_color }};
          padding-bottom: {{ section.settings.column_border_spacing }}px;
          margin-bottom: {{ section.settings.column_border_spacing }}px;
        {% endif %}
      {% endif %}
    }

    .footer-menu-toggle-{{ footer_id }} {
      display: block;
    }

    .footer-menu-heading-{{ footer_id }} {
      cursor: pointer;
      padding-right: 30px;
    }

    .footer-nav-{{ footer_id }} {
      display: none;
      padding-bottom: 15px;
    }

    .footer-nav-{{ footer_id }}.active {
      display: flex;
    }

    .footer-bottom-{{ footer_id }} {
      flex-direction: column;
      gap: 15px;
      text-align: center;
      justify-content: center !important;
    }

    .footer-bottom-group-{{ footer_id }} {
      flex-direction: column;
      gap: 15px;
    }

    .footer-newsletter-form-{{ footer_id }} {
      flex-direction: column;
    }
  }

  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .footer-grid-{{ footer_id }} {
      {% if section.settings.columns == '4' %}
        grid-template-columns: repeat(2, 1fr) !important;
      {% elsif section.settings.columns == '3' %}
        grid-template-columns: repeat({{ section.settings.tablet_columns | default: 3 }}, 1fr) !important;
      {% else %}
        grid-template-columns: repeat({{ section.settings.columns }}, 1fr) !important;
      {% endif %}
      gap: {{ section.settings.tablet_column_gap | default: section.settings.column_spacing }}px;
    }
  }

  @media screen and (min-width: 1024px) {
    .footer-grid-{{ footer_id }} {
      display: grid !important;
      {% if section.settings.column_distribution == 'equal' %}
        grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
      {% else %}
        {% case section.settings.column_distribution %}
          {% when 'wide_first' %}
            grid-template-columns: 2fr repeat({{ section.settings.columns | minus: 1 }}, 1fr);
          {% when 'wide_last' %}
            grid-template-columns: repeat({{ section.settings.columns | minus: 1 }}, 1fr) 2fr;
          {% when 'wide_center' %}
            {% if section.settings.columns == '3' %}
              grid-template-columns: 1fr 2fr 1fr;
            {% else %}
              grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
            {% endif %}
          {% when 'custom' %}
            grid-template-columns: {{ section.settings.custom_column_widths }};
          {% else %}
            grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
        {% endcase %}
      {% endif %}
      gap: {{ section.settings.column_spacing }}px;
      {% if section.settings.column_alignment == 'default' %}
        align-items: stretch;
      {% else %}
        align-items: {{ section.settings.column_alignment }};
      {% endif %}
      {% if section.settings.column_justify == 'default' %}
        justify-content: space-between;
      {% else %}
        justify-content: {{ section.settings.column_justify }};
      {% endif %}
      {% if section.settings.desktop_column_gap != section.settings.column_spacing %}
        gap: {{ section.settings.desktop_column_gap }}px;
      {% endif %}
    }
    .footer-column-{{ footer_id }} {
      display: flex;
      flex-direction: column;
      {% if section.settings.column_alignment == 'stretch' or section.settings.column_alignment == 'default' %}
        height: 100%;
      {% endif %}
      {% if section.settings.column_content_alignment != 'default' %}
        align-items: {{ section.settings.column_content_alignment }};
      {% endif %}
      {% if section.settings.column_text_alignment != 'default' %}
        text-align: {{ section.settings.column_text_alignment }};
      {% endif %}
      {% if section.settings.column_padding_x > 0 or section.settings.column_padding_y > 0 %}
        padding: {{ section.settings.column_padding_y }}px {{ section.settings.column_padding_x }}px;
      {% endif %}
    }
    
    {% if section.settings.enable_column_borders %}
      {% for i in (1..section.settings.columns) %}
        {% unless forloop.last %}
          .footer-column-{{ footer_id }}:nth-child({{ i }}) {
            border-right: {{ section.settings.column_border_width }}px {{ section.settings.column_border_style }} {{ section.settings.column_border_color }};
            padding-right: {{ section.settings.column_border_spacing }}px;
          }
          .footer-column-{{ footer_id }}:nth-child({{ i | plus: 1 }}) {
            padding-left: {{ section.settings.column_border_spacing }}px;
          }
        {% endunless %}
      {% endfor %}
    {% endif %}
    
    {% if section.settings.enable_hover_effects %}
      .footer-column-{{ footer_id }}:hover {
        transform: translateY(-{{ section.settings.hover_lift_amount }}px);
        transition: transform 0.3s ease;
      }
    {% endif %}
  }

  .footer-newsletter-input-group {
    display: flex;
    align-items: stretch;
  }
  
  .footer-menu-toggle-{{ footer_id }}:focus {
    outline: none;
    box-shadow: none;
  }

  .footer-menu-toggle-{{ footer_id }} svg {
    display: inline-block;
    vertical-align: middle;
  }

  .footer-newsletter-button-icon-arrow svg,
  .footer-newsletter-button-icon-plus svg,
  .footer-newsletter-button-icon-custom svg {
    display: inline-block;
    vertical-align: middle;
  }

  .footer-payment-{{ footer_id }} svg {
    width: {{ section.settings.payment_icon_size }}px;
    height: auto;
  }
{% endstyle %}

<footer class="footer-{{ footer_id }}" {{ section.shopify_attributes }}>
  <div class="footer-container-{{ footer_id }}">
    {% comment %} Newsletter Section {% endcomment %}
    {% if section.settings.show_newsletter %}
      <div class="footer-newsletter-{{ footer_id }}">
        <h3 class="footer-title-{{ footer_id }} footer-newsletter-title-{{ footer_id }}">{{ section.settings.newsletter_title }}</h3>
        <p class="footer-newsletter-text-{{ footer_id }}">{{ section.settings.newsletter_text }}</p>
        
        {% form 'customer' %}
          {% if form.errors %}
            <div class="footer-newsletter-error-{{ footer_id }}">
              {{ section.settings.newsletter_error_message | default: form.errors | default_errors }}
            </div>
          {% endif %}
          
          {% if form.posted_successfully? %}
            <div class="footer-newsletter-success-{{ footer_id }}">
              {{ section.settings.newsletter_success_message }}
            </div>
          {% else %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer-newsletter-form-{{ footer_id }}{% if section.settings.newsletter_button_inside_input %} footer-newsletter-input-group{% endif %}">
              {% if section.settings.newsletter_show_name %}
                <input
                  type="text"
                  name="contact[first_name]"
                  class="footer-newsletter-input-{{ footer_id }}"
                  placeholder="Your name"
                  style="border-radius: {% if section.settings.newsletter_input_style == 'pill' %}999px{% elsif section.settings.newsletter_input_style == 'rounded' %}{{ section.settings.newsletter_border_radius }}px{% else %}0{% endif %};"
                >
              {% endif %}
              
              {% if section.settings.newsletter_button_inside_input %}
                <div class="footer-newsletter-input-group-wrapper-{{ footer_id }}">
                  <input
                    type="email"
                    name="contact[email]"
                    id="newsletter-{{ footer_id }}"
                    class="footer-newsletter-input-{{ footer_id }}"
                    value="{{ form.email }}"
                    placeholder="{{ section.settings.newsletter_placeholder }}"
                    required
                    style="border-radius: {% if section.settings.newsletter_input_style == 'pill' %}999px{% elsif section.settings.newsletter_input_style == 'rounded' %}{{ section.settings.newsletter_border_radius }}px{% else %}0{% endif %};"
                  >
                  <button
                    type="submit"
                    class="footer-newsletter-button-{{ footer_id }}"
                    name="commit"
                    style="
                      border-radius: {% if section.settings.newsletter_input_style == 'pill' %}999px{% elsif section.settings.newsletter_input_style == 'rounded' %}{{ section.settings.newsletter_border_radius }}px{% else %}0{% endif %};
                      {% if section.settings.newsletter_button_style == 'outline' %}
                        background: none; border: 2px solid {{ section.settings.newsletter_button_bg }}; color: {{ section.settings.newsletter_button_bg }};
                      {% elsif section.settings.newsletter_button_style == 'ghost' %}
                        background: none; border: none; color: {{ section.settings.newsletter_button_bg }};
                      {% endif %}
                    "
                  >
                    {% if section.settings.newsletter_button_icon == 'arrow' %}
                      <svg width="20" height="20" fill="none" viewBox="0 0 20 20">
                        <path d="M5 10h10m0 0l-4-4m4 4l-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    {% elsif section.settings.newsletter_button_icon == 'plus' %}
                      <svg width="20" height="20" fill="none" viewBox="0 0 20 20">
                        <path d="M10 5v10m5-5H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    {% elsif section.settings.newsletter_button_icon == 'custom' and section.settings.newsletter_button_custom_svg != blank %}
                      <svg width="20" height="20" fill="none" viewBox="0 0 20 20">
                        {{ section.settings.newsletter_button_custom_svg }}
                      </svg>
                    {% else %}
                      {{ section.settings.newsletter_button_text }}
                    {% endif %}
                  </button>
                </div>
              {% else %}
                <input
                  type="email"
                  name="contact[email]"
                  id="newsletter-{{ footer_id }}"
                  class="footer-newsletter-input-{{ footer_id }}"
                  value="{{ form.email }}"
                  placeholder="{{ section.settings.newsletter_placeholder }}"
                  required
                  style="border-radius: {% if section.settings.newsletter_input_style == 'pill' %}999px{% elsif section.settings.newsletter_input_style == 'rounded' %}{{ section.settings.newsletter_border_radius }}px{% else %}0{% endif %};"
                >
                <button
                  type="submit"
                  class="footer-newsletter-button-{{ footer_id }}"
                  name="commit"
                  style="
                    border-radius: {% if section.settings.newsletter_input_style == 'pill' %}999px{% elsif section.settings.newsletter_input_style == 'rounded' %}{{ section.settings.newsletter_border_radius }}px{% else %}0{% endif %};
                    {% if section.settings.newsletter_button_style == 'outline' %}
                      background: none; border: 2px solid {{ section.settings.newsletter_button_bg }}; color: {{ section.settings.newsletter_button_bg }};
                    {% elsif section.settings.newsletter_button_style == 'ghost' %}
                      background: none; border: none; color: {{ section.settings.newsletter_button_bg }};
                    {% endif %}
                  "
                >
                  {% if section.settings.newsletter_button_icon == 'arrow' %}
                    <svg width="20" height="20" fill="none" viewBox="0 0 20 20">
                      <path d="M5 10h10m0 0l-4-4m4 4l-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% elsif section.settings.newsletter_button_icon == 'plus' %}
                    <svg width="20" height="20" fill="none" viewBox="0 0 20 20">
