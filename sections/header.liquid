{{ 'header.css' | asset_url | stylesheet_tag }}

<script src="{{ 'mega-menu.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'header.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>
<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if section.settings.logo %}
      {% assign image_size = section.settings.logo.width %}
      "logo": {{ section.settings.logo | image_url: width: image_size | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ shop.url | append: page.url | json }}
  }
</script>

{% if request.page_type == 'index' %}
  {% assign potential_action_target = shop.url | append: routes.search_url | append: '?q={search_term_string}' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ shop.url | append: page.url | json }}
    }
  </script>
{% endif %}

{% liquid
  assign transparent_on_top = false

  if template.name == 'index'
    assign transparent_on_top = section.settings.transparent_on_top
  endif

  assign show_language_switcher = section.settings.show_language_switcher
  assign show_currency_switcher = section.settings.show_currency_switcher
  assign show_account_icon = section.settings.show_account_icon
  assign show_wishlist_icon = section.settings.show_wishlist_icon
  assign show_compare_icon = section.settings.show_compare_icon
  assign show_cart_icon = section.settings.show_cart_icon
  assign show_country_selector = section.settings.show_country_selector
  assign design = section.settings.header_design
  assign container = section.settings.container
  assign search_settings = section.settings.search

  if container == 'w-full'
    assign container = 'container-full'
  endif

  assign logo_aspect_ratio = section.settings.logo.aspect_ratio | default: 2.333
%}

{% style %}
  :root {
    --logo-width-desktop: {{ section.settings.logo_max_width }}px;
    --logo-width-mobile: {{ section.settings.mobile_logo_max_width }}px;
    --logo-width-sticky: {{ section.settings.sticky_logo_max_width }}px;
    --logo-height-sticky: {{ section.settings.sticky_logo_max_width | divided_by: logo_aspect_ratio }}px;
    --header-transparent-text-color: {{ section.settings.transparent_text_color.red }}, {{ section.settings.transparent_text_color.green }}, {{ section.settings.transparent_text_color.blue }};
    
    /* Desktop Header Customization Variables */
    --desktop-header-height: {{ section.settings.desktop_header_height | default: 80 }}px;
    --desktop-header-padding-x: {{ section.settings.desktop_header_padding_x | default: 20 }}px;
    --desktop-header-padding-y: {{ section.settings.desktop_header_padding_y | default: 10 }}px;
    --desktop-header-border-radius: {{ section.settings.desktop_header_border_radius | default: 0 }}px;
    --desktop-header-element-spacing: {{ section.settings.desktop_header_element_spacing | default: 20 }}px;
    --desktop-header-max-width: {{ section.settings.desktop_header_max_width | default: 1200 }}px;
    --desktop-header-shadow-opacity: {{ section.settings.desktop_header_shadow_opacity | default: 10 | divided_by: 100.0 }};
    --desktop-header-border-color: {{ section.settings.desktop_header_border_color | default: '#e5e5e5' }};
    --desktop-header-border-width: {{ section.settings.desktop_header_border_width | default: 1 }}px;
  }

  /* Desktop Header Custom Styling */
  @media screen and (min-width: 1024px) {
    .m-header__desktop {
      {% if section.settings.desktop_header_shadow %}
        box-shadow: 0 2px 10px rgba(0, 0, 0, var(--desktop-header-shadow-opacity));
      {% else %}
        box-shadow: none;
      {% endif %}
      
      {% if section.settings.desktop_header_border %}
        border-bottom: var(--desktop-header-border-width) solid var(--desktop-header-border-color);
      {% endif %}
      
      border-radius: var(--desktop-header-border-radius);
      padding: var(--desktop-header-padding-y) var(--desktop-header-padding-x);
    }

    .m-header__container {
      {% case section.settings.desktop_header_width_type %}
        {% when 'custom' %}
          max-width: var(--desktop-header-max-width);
          margin: 0 auto;
        {% when 'boxed' %}
          max-width: 1200px;
          margin: 0 auto;
        {% else %}
          max-width: none;
          width: 100%;
      {% endcase %}
    }

    .m-header__inner {
      min-height: var(--desktop-header-height);
      gap: var(--desktop-header-element-spacing);
      
      {% case section.settings.desktop_header_alignment %}
        {% when 'left' %}
          justify-content: flex-start;
        {% when 'center' %}
          justify-content: center;
        {% else %}
          justify-content: space-between;
      {% endcase %}
    }
  }
{% endstyle %}
<m-header
  data-section-id="{{ section.id }}"
  data-section-type="header"
  data-page="{{ request.path | strip }}"
  data-header-design="{{ section.settings.header_design }}"
  {% if request.design_mode == true %}
    data-design-mode="true"
  {% endif %}
  class="m-header m:block{% if transparent_on_top %} transparent-on-top{% endif %}"
  data-transparent="{{ transparent_on_top }}"
  data-sticky="{{ section.settings.sticky_header }}"
>
  {% render 'header__topbar', header: section %}
  <div class="m-header__wrapper">
    {% comment %}Header Mobile{% endcomment %}
    <header
      class="m-header__mobile container-fluid m:flex m:items-center m-gradient m-color-{{ section.settings.color_scheme }}"
      data-screen="m-header__mobile"
      data-transparent="{{ transparent_on_top }}"
    >
      <div class="m-menu-button m:flex m:flex-1 m:w-3/12 m:items-center">
        <button class="m-hamburger-box"
          style="
            width: {{ section.settings.mb_drawer_icon_size | default: 44 }}px;
            height: {{ section.settings.mb_drawer_icon_size | default: 44 }}px;
            border: none;
            background: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: none;
            margin-right: 8px;
          "
          aria-label="Open menu"
          type="button"
          data-active="false"
          data-anim="{{ section.settings.mb_drawer_icon_animation_style | default: 'fade' }}"
        >
          <span class="m-hamburger-icon" data-state="hamburger">
            {% case section.settings.mb_drawer_hamburger_icon_type %}
              {% when 'dots-horizontal' %}
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><circle cx="5" cy="12" r="2"/><circle cx="12" cy="12" r="2"/><circle cx="19" cy="12" r="2"/></svg>
              {% when 'dots-vertical' %}
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="5" r="2"/><circle cx="12" cy="12" r="2"/><circle cx="12" cy="19" r="2"/></svg>
              {% when 'custom' %}
                {{ section.settings.mb_drawer_hamburger_icon_svg }}
              {% else %}
                <!-- Classic hamburger icon -->
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="7" x2="21" y2="7"></line><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="17" x2="21" y2="17"></line></svg>
            {% endcase %}
          </span>
          <span class="m-hamburger-icon m-hamburger-close" data-state="close" style="display:none;">
            {% case section.settings.mb_drawer_close_icon_type %}
              {% when 'arrow-left' %}
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
              {% when 'arrow-right' %}
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
              {% when 'plus' %>
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
              {% when 'custom' %}
                {{ section.settings.mb_drawer_close_icon_svg }}
              {% else %}
                <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: 2 }}" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
            {% endcase %}
          </span>
        </button>
        {% if show_wishlist_icon %}
          {% liquid
            assign wishlist_icon_size_override = section.settings.wishlist_icon_size_override | default: false
            assign wishlist_icon_size = section.settings.wishlist_icon_size | default: 24
            assign header_icon_size = section.settings.header_icon_size | default: 24
            
            if wishlist_icon_size_override
              assign final_wishlist_icon_size = wishlist_icon_size
            else
              assign final_wishlist_icon_size = header_icon_size
            endif
          %}
          <button 
            class="m-wishlist-drawer-trigger"
            aria-label="{{ 'layout.wishlist.title' | t }}"
            data-open-wishlist-drawer
            style="
              width: {{ section.settings.mb_drawer_icon_size | default: 44 }}px;
              height: {{ section.settings.mb_drawer_icon_size | default: 44 }}px;
              border: none;
              background: none;
              display: flex;
              align-items: center;
              justify-content: center;
              cursor: pointer;
              transition: none;
            "
          >
            {% case section.settings.wishlist_icon_type | default: 'default' %}
              {% when 'filled' %}
                <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="currentColor" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
              {% when 'minimal' %}
                <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: '2' }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
              {% when 'star' %}
                <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: '2' }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                </svg>
              {% when 'star-filled' %}
                <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="currentColor" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                </svg>
              {% when 'bookmark' %}
                <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: '2' }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
                </svg>
              {% when 'custom' %}
                {% if section.settings.wishlist_icon_svg != blank %}
                  {{ section.settings.wishlist_icon_svg | replace: '<svg', '<svg width="' | append: final_wishlist_icon_size | append: '" height="' | append: final_wishlist_icon_size | append: '"' }}
                {% else %}
                  <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="none" stroke="currentColor" stroke-width="{{ section.settings.header_icon_weight | default: '2' }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                  </svg>
                {% endif %}
              {% else %}
                <svg width="{{ final_wishlist_icon_size }}" height="{{ final_wishlist_icon_size }}" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                  <path d="M458.4 64.3C400.6 15.7 311.3 23 256 79.3 200.7 23 111.4 15.6 53.6 64.3-21.6 127.6-10.6 230.8 43 285.5l175.4 178.7c10 10.2 23.4 15.9 37.6 15.9 14.3 0 27.6-5.6 37.6-15.8L469 285.6c53.5-54.7 64.7-157.9-10.6-221.3zm-23.6 187.5L259.4 430.5c-2.4 2.4-4.4 2.4-6.8 0L77.2 251.8c-36.5-37.2-43.9-107.6 7.3-150.7 38.9-32.7 98.9-27.8 136.5 10.5l35 35.7 35-35.7c37.8-38.5 97.8-43.2 136.5-10.6 51.1 43.1 43.5 113.9 7.3 150.8z"/>
                </svg>
            {% endcase %}
          </button>
        {% endif %}
      </div>
      {% comment %} Header-logo-mobile {% endcomment %}
      {% liquid
        assign class = 'm-logo m-logo--mobile m:justify-center ' | append: 'm:w-6/12'

        assign aspect_ratio = section.settings.logo.aspect_ratio | default: 2.333
        assign aspect_ratio_mobile = section.settings.logo_mobile.aspect_ratio | default: aspect_ratio

        assign logo_text = section.settings.logo_text
        assign logo_desktop = section.settings.logo
        assign logo_mobile = section.settings.logo_mobile
        assign logo_svg_desktop = section.settings.logo_svg
        assign logo_svg_mobile = section.settings.logo_mobile_svg

        assign logo_transparent = section.settings.logo_transparent
        assign logo_transparent_svg = section.settings.logo_transparent_svg

        assign logo_alt = section.settings.logo.alt | default: shop.name

        assign transparent_on_top = section.settings.transparent_on_top

        assign logo = ''
        assign is_svg = false
        if logo_svg_mobile != blank
          assign logo = logo_svg_mobile
          assign is_svg = true
        elsif logo_svg_desktop != blank
          assign logo = logo_svg_desktop
          assign is_svg = true
        elsif logo_mobile != blank
          assign logo = logo_mobile
          assign is_svg = false
        elsif logo_desktop != blank
          assign logo = logo_desktop
          assign is_svg = false
        else
          assign logo = ''
          assign is_svg = false
        endif

        if section.settings.logo
          assign class = class | append: ' m-logo--has-image'
        endif
      %}

      <div class="{{ class | strip_newlines }}">
        {% if logo != blank %}
          <a href="{{ routes.root_url }}" class="m-logo__image m:block" title="{{ shop.name }}">
            {% if is_svg %}
              <div class="m-logo__image-default m:display-flex m-image">
                {% comment %}theme-check-disable RemoteAsset{% endcomment %}
                <img src="{{ logo }}" alt="{{ logo_alt }}" width="auto" height="auto" loading="lazy">
                {% comment %}theme-check-enable RemoteAsset{% endcomment %}
              </div>
            {% else %}
              <div
                class="m-logo__image-default m:display-flex m-image"
                style="--aspect-ratio: {{ aspect_ratio }};--aspect-ratio-mobile: {{ aspect_ratio_mobile }}"
              >
                {% liquid
                  assign logo_alt = logo.alt | default: shop.name | escape
                  assign logo_height = section.settings.mobile_logo_max_width | divided_by: logo.aspect_ratio | round
                %}
                {{
                  logo
                  | image_url: width: section.settings.width
                  | image_tag:
                    class: 'm:inline-block',
                    widths: '50, 100, 150, 200, 250, 300, 400',
                    height: logo_height,
                    width: section.settings.logo_width,
                    alt: logo_alt
                }}
              </div>
            {% endif %}
            {% if transparent_on_top %}
              {%- liquid
                assign logo_transparent_mobile = ''
                if logo_transparent_svg != blank
                  assign logo_transparent_mobile = logo_transparent_svg
                elsif logo_transparent != blank
                  assign logo_transparent_mobile = logo_transparent
                else
                  assign logo_transparent_mobile = logo
                endif
              -%}
              {% if logo_transparent_svg != blank %}
                <div class="m-logo__image-transparent m:display-flex m-image">
                  {% comment %} theme-check-disable RemoteAsset {% endcomment %}
                  <img
                    src="{{ logo_transparent_mobile }}"
                    alt="{{ logo_alt }}"
                    width="auto"
                    height="auto"
                    loading="lazy"
                  >
                  {% comment %} theme-check-enable RemoteAsset {% endcomment %}
                </div>
              {% else %}
                <div class="m-logo__image-transparent m:display-flex m-image">
                  {{
                    logo_transparent_mobile
                    | image_url: width: section.settings.width
                    | image_tag:
                      class: 'm:inline-block',
                      widths: '50, 100, 150, 200, 250, 300, 400',
                      height: logo_height,
                      width: section.settings.logo_width,
                      alt: logo_alt
                  }}
                </div>
              {% endif %}
            {% endif %}
          </a>
        {% else %}
          <a href="{{ routes.root_url }}" class="m:block m:text-center">
            <strong>{{ logo_text | default: shop.name }}</strong>
          </a>
        {% endif %}
      </div>
      {% comment %} End header logo mobile {% endcomment %}
      {% if show_cart_icon or search_settings != 'hide' %}
        <div class="m-header__mobile-right m:w-3/12 m:flex m:flex-1 m:justify-end">
          {% if search_settings != 'hide' %}
            <m-search-popup class="m:flex m:justify-center m:items-center" data-open-search-popup>
              <span class="m-header__search-icon">
                {%- liquid
                  assign search_icon_type = section.settings.search_icon_type | default: 'default'
                  assign search_icon_size_override = section.settings.search_icon_size_override | default: false
                  assign search_icon_size = section.settings.search_icon_size | default: 24
                  assign header_icon_size = section.settings.header_icon_size | default: 24
                  assign header_icon_weight = section.settings.header_icon_weight | default: '2'
                  assign search_icon_svg = section.settings.search_icon_svg

                  if search_icon_size_override
                    assign final_icon_size = search_icon_size
                  else
                    assign final_icon_size = header_icon_size
                  endif

                  assign icon_classes = 'm-svg-icon--custom'
                  assign icon_style = 'width: ' | append: final_icon_size | append: 'px; height: ' | append: final_icon_size | append: 'px; stroke-width: ' | append: header_icon_weight | append: ';'
                -%}
                {% case search_icon_type %}
                  {% when 'minimal' %}
                    <svg class="{{ icon_classes }}" style="{{ icon_style }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="11" cy="11" r="8"></circle>
                      <path d="m21 21-4.35-4.35"></path>
                    </svg>
                  {% when 'outlined' %}
                    <svg class="{{ icon_classes }}" style="{{ icon_style }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                    </svg>
                  {% when 'custom' %}
                    {% if search_icon_svg != blank %}
                      {{ search_icon_svg | replace: '<svg', '<svg class="' | append: icon_classes | append: '" style="' | append: icon_style | append: '"' }}
                    {% else %}
                      <svg class="{{ icon_classes }}" style="{{ icon_style }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                      </svg>
                    {% endif %}
                  {% else %}
                    <svg
                      class="{{ icon_classes }}"
                      style="{{ icon_style }}"
                      fill="currentColor"
                      stroke="currentColor"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 512 512"
                    >
                      <path d="M508.5 468.9L387.1 347.5c-2.3-2.3-5.3-3.5-8.5-3.5h-13.2c31.5-36.5 50.6-84 50.6-136C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c52 0 99.5-19.1 136-50.6v13.2c0 3.2 1.3 6.2 3.5 8.5l121.4 121.4c4.7 4.7 12.3 4.7 17 0l22.6-22.6c4.7-4.7 4.7-12.3 0-17zM208 368c-88.4 0-160-71.6-160-160S119.6 48 208 48s160 71.6 160 160-71.6 160-160 160z"/>
                    </svg>
                {% endcase %}
              </span>
            </m-search-popup>
          {% endif %}
          {% if show_cart_icon %}
            {% render 'cart' %}
          {% endif %}
        </div>
      {% endif %}

      {% render 'header-menu-drawer', section: section %}
    </header>

    {% comment %}Header Desktop{% endcomment %}
    <header
      class="m-header__desktop {{ design }} m-gradient m-color-{{ section.settings.color_scheme }}"
      data-screen="m-header__desktop"
      data-transparent="{{ transparent_on_top }}"
